                content: `<strong>–î–µ–Ω—å 33. 1 —è–Ω–≤–∞—Ä—è ‚Äî —ç—Ç–æ —Å–∏–º–≤–æ–ª –ü–ï–†–ï–ó–ê–ì–†–£–ó–ö–ò.</strong>\n\n<strong>–ù–∞ 1 —è–Ω–≤–∞—Ä—è:</strong>\n‚Ä¢ –¢—ã —É–∂–µ 35 –¥–Ω–µ–π –Ω–∞ –ø—É—Ç–∏ (–Ω–µ ¬´–Ω–∞—á–∏–Ω–∞–µ—à—å¬ª, –∞ ¬´–ø—Ä–æ–¥–æ–ª–∂–∞–µ—à—å¬ª)\n‚Ä¢ –¢—ã –≤–∏–¥–µ–ª —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã (—ç—Ç–æ –º–æ—Ç–∏–≤–∏—Ä—É–µ—Ç)\n‚Ä¢ –¢—ã –∑–Ω–∞–µ—à—å —Å–∏—Å—Ç–µ–º—É (–æ–Ω–∞ —Ä–∞–±–æ—Ç–∞–µ—Ç)\n‚Ä¢ –£ —Ç–µ–±—è –µ—Å—Ç—å —Å–æ–æ–±—â–µ—Å—Ç–≤–æ (–º–∏–ª–ª–∏–æ–Ω –ª—é–¥–µ–π –≤–º–µ—Å—Ç–µ —Å —Ç–æ–±–æ–π)\n\n<strong>–í–º–µ—Å—Ç–æ –∫–ª—è—Ç–≤ ‚Äî —É —Ç–µ–±—è –µ—Å—Ç—å –î–û–ö–ê–ó–ê–¢–ï–õ–¨–°–¢–í–ê.</strong>\n\n–ù–∞ 1 —è–Ω–≤–∞—Ä—è 2026 —Ç—ã –æ—Ç–∫—Ä–æ–µ—à—å –ø–∏—Å—å–º–æ –≤ –±—É–¥—É—â–µ–µ.\n\n<strong>–í–æ–ø—Ä–æ—Å:</strong> –í–æ —á—Ç–æ —Ç—ã –ø—Ä–µ–≤—Ä–∞—Ç–∏—à—å—Å—è –∑–∞ 365 –¥–Ω–µ–π?`,
                cta: "–ö–∞–∫ —Ç—ã –≤—Å—Ç—Ä–µ—á–∞–µ—à—å –ù–æ–≤—ã–π –ì–æ–¥? –ù–∞–ø–∏—à–∏ –ø–ª–∞–Ω –Ω–∞ 1 —è–Ω–≤–∞—Ä—è. –ü–æ–¥–ø–∏—à–∏—Å—å –∏ –Ω–∞–ø–∏—à–∏ '2026'!"
            },
            // Day 35 - The Crown
            {
                num: 35,
                date: "31 –¥–µ–∫–∞–±—Ä—è",
                theme: "üëë –§–∏–Ω–∞–ª: –ö–æ—Ä–æ–ª—å/–ö–æ—Ä–æ–ª–µ–≤–∞ –°—É–¥—å–±—ã",
                content: `<strong>–î–µ–Ω—å 34. –ü–æ—Å–ª–µ–¥–Ω–∏–π –¥–µ–Ω—å –≥–æ–¥–∞.</strong>\n\n<strong>–ó–∞ 35 –¥–Ω–µ–π —Ç—ã —Å–¥–µ–ª–∞–ª –±–æ–ª—å—à–µ, —á–µ–º –±–æ–ª—å—à–∏–Ω—Å—Ç–≤–æ –∑–∞ –≥–æ–¥.</strong>\n\n<strong>–¢—ã –∑–∞—Å–ª—É–∂–∏–ª:</strong>\nüëë –ë—ã—Ç—å –∫–æ—Ä–æ–ª—ë–º/–∫–æ—Ä–æ–ª–µ–≤–æ–π —Å–≤–æ–µ–π –∂–∏–∑–Ω–∏\nüî• –ü–æ–ª–Ω–æ–µ –∑–¥–æ—Ä–æ–≤—å–µ –∏ –º–æ–ª–æ–¥–æ—Å—Ç—å\nüí™ –°–∏–ª—É –∏ –≤—ã–Ω–æ—Å–ª–∏–≤–æ—Å—Ç—å\nüß† –Ø—Å–Ω–æ—Å—Ç—å —É–º–∞\n‚ù§Ô∏è –û—Ç–∫—Ä—ã—Ç–æ–µ, –ø–æ–ª–Ω–æ–µ –ª—é–±–≤–∏ —Å–µ—Ä–¥—Ü–µ\nüåü –Ø—Å–Ω—ã–π –ø—É—Ç—å –≤–ø–µ—Ä—ë–¥\nüéØ –ú–∏—Å—Å–∏—é, –∫–æ—Ç–æ—Ä–∞—è –±–æ–ª—å—à–µ, —á–µ–º —Ç—ã\n\n<strong>–ó–∞–≤—Ç—Ä–∞ —Ç—ã –≤—Å—Ç–∞–Ω–µ—à—å –≤ –Ω–æ–≤–æ–º —Å–æ—Å—Ç–æ—è–Ω–∏–∏.</strong>\n\n–õ—é–¥–∏ –±—É–¥—É—Ç —Å–ø—Ä–∞—à–∏–≤–∞—Ç—å: ¬´–ß—Ç–æ —Å —Ç–æ–±–æ–π —Å–ª—É—á–∏–ª–æ—Å—å?¬ª\n\n–ò —Ç—ã —Å–∫–∞–∂–µ—à—å: <strong>¬´–Ø –≤—ã–±—Ä–∞–ª –∂–∏–∑–Ω—å. –ò —è –Ω–µ –≤–µ—Ä–Ω—É—Å—å –∫ —Å–º–µ—Ä—Ç–∏.¬ª</strong>`,
                cta: "–°–∫–∞–∂–∏ –º–Ω–µ: –ß—Ç–æ —Ç—ã —á—É–≤—Å—Ç–≤—É–µ—à—å —Å–µ–π—á–∞—Å? –ù–∞–ø–∏—à–∏ –≤ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏—è—Ö. –ü–æ–¥–ø–∏—à–∏—Å—å ‚Äî —ç—Ç–æ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ –Ω–æ–≤–æ–≥–æ –Ω–∞—Å!"
            }
        ];

        // Fill in Days 6-11, 13-18, 20-25, 27-32 with similar data structure
        const fillerDays = [6, 7, 8, 9, 10, 11, 13, 14, 15, 16, 17, 18, 20, 21, 22, 23, 24, 25, 27, 28, 29, 30, 31, 32];
        fillerDays.forEach(day => {
            daysData.push({
                num: day,
                date: `–î–µ–Ω—å ${day}`,
                theme: `üìç –î–µ–Ω—å ${day}`,
                content: `–≠—Ç–æ –¥–µ–Ω—å ${day} –∏–∑ 35 –¥–Ω–µ–π –ì–æ–¥–∞ –í–æ–∑—Ä–æ–∂–¥–µ–Ω–∏—è.\n\n–ü–æ–ª–Ω—ã–π –∫–æ–Ω—Ç–µ–Ω—Ç –¥–ª—è —ç—Ç–æ–≥–æ –¥–Ω—è –º–æ–∂–Ω–æ –Ω–∞–π—Ç–∏ –≤ –æ—Å–Ω–æ–≤–Ω–æ–π –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏–∏.\n\n<strong>–ü—Ä–æ–¥–æ–ª–∂–∞–π –∏–¥—Ç–∏ –≤–ø–µ—Ä—ë–¥!</strong> –ö–∞–∂–¥—ã–π –¥–µ–Ω—å ‚Äî —à–∞–≥ –∫ —Ç—Ä–∞–Ω—Å—Ñ–æ—Ä–º–∞—Ü–∏–∏.`,
                cta: "–ü–æ–¥–ø–∏—à–∏—Å—å –Ω–∞ @lifetothefullest7 –¥–ª—è –ø–æ–ª–Ω–æ–≥–æ –∫–æ–Ω—Ç–µ–Ω—Ç–∞!"
            });
        });

        // Sort by number
        daysData.sort((a, b) => a.num - b.num);

        // Initialize calendar
        function initializeCalendar() {
            const quarters = [
                { id: 'quarter1', days: daysData.slice(0, 7) },    // Days 1-7
                { id: 'quarter2', days: daysData.slice(7, 12) },   // Days 8-12
                { id: 'quarter3', days: daysData.slice(12, 19) },  // Days 13-19
                { id: 'quarter4', days: daysData.slice(19, 24) },  // Days 20-24
                { id: 'quarter5', days: daysData.slice(24, 35) }   // Days 25-35
            ];

            quarters.forEach(q => {
                const container = document.getElementById(q.id);
                q.days.forEach(day => {
                    const btn = document.createElement('button');
                    btn.className = 'day-btn';
                    btn.innerHTML = `<span class="day-number">${day.num}</span><span class="day-label">–î–µ–Ω—å</span>`;
                    btn.onclick = () => openModal(day);
                    container.appendChild(btn);
                });
            });
        }

        // Modal functions
        function openModal(day) {
            document.getElementById('modalDayNumber').textContent = day.num;
            document.getElementById('modalDayNumberBig').textContent = day.num;
            document.getElementById('modalDayDate').textContent = day.date;
            document.getElementById('modalContent').innerHTML = day.content.replace(/\n/g, '<br>');
            document.getElementById('dayModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('dayModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function copyCTA() {
            const day = daysData[parseInt(document.getElementById('modalDayNumber').textContent) - 1];
            navigator.clipboard.writeText(day.cta);
            alert('CTA —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞!');
        }

        function shareDay() {
            const day = daysData[parseInt(document.getElementById('modalDayNumber').textContent) - 1];
            const text = `${day.num}. ${day.theme}\n\n${day.content}\n\n–ü–æ–¥–ø–∏—à–∏—Å—å –Ω–∞ @lifetothefullest7`;
            
            if (navigator.share) {
                navigator.share({
                    title: '–ì–æ–¥ –í–æ–∑—Ä–æ–∂–¥–µ–Ω–∏—è',
                    text: text
                });
            } else {
                alert('–°–∫–æ–ø–∏—Ä—É–π —Ç–µ–∫—Å—Ç –≤—Ä—É—á–Ω—É—é:\n\n' + text);
            }
        }

        // Tab switching
        function switchTab(tabName) {
            // Hide all
            document.querySelectorAll('.content').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            
            // Show selected
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Update progress
        function updateProgress() {
            const today = new Date();
            const startDate = new Date('2025-11-27');
            const endDate = new Date('2025-12-31');
            
            const daysPassed = Math.max(0, Math.floor((today - startDate) / (1000 * 60 * 60 * 24)));
            const daysLeft = Math.max(0, Math.ceil((endDate - today) / (1000 * 60 * 60 * 24)));
            const totalDays = 35;
            const percent = Math.round((daysPassed / totalDays) * 100);
            
            document.getElementById('daysPassed').textContent = daysPassed;
            document.getElementById('daysLeft').textContent = daysLeft;
            document.getElementById('percentComplete').textContent = percent + '%';
            document.getElementById('progressFill').style.width = percent + '%';
        }

        // Close modal on outside click
        document.getElementById('dayModal').addEventListener('click', (e) => {
            if (e.target.id === 'dayModal') {
                closeModal();
            }
        });

        // Initialize
        window.addEventListener('load', () => {
            initializeCalendar();
            updateProgress();
        });
    </script>
</body>
</html>
